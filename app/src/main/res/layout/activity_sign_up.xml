<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:orientation="vertical"
        android:background="@drawable/login_background"
>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up to Gain Access"
        android:textColor="@color/colorSignupHeading"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/signUpName"
                android:inputType="textCapWords"
                android:layout_marginTop="70dp"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:background="@drawable/edit_text_background"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_below="@+id/signUpName"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:id="@+id/signUpEmail"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/edit_text_background"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:id="@+id/signUpPassword"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890@$/_"
                android:layout_below="@+id/signUpEmail"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/edit_text_background"
                android:inputType="textPassword"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re enter Password"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/signUpPasswordCheck"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890@$/_"
                android:layout_below="@+id/signUpPassword"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:background="@drawable/edit_text_background"
                android:inputType="textPassword"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signUpPasswordCheck"
                android:layout_marginTop="50dp"
                android:textSize="25dp"
                android:id="@+id/signUpButton"
                android:text="Sign Up"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_button_background"
        />
    </RelativeLayout>
</LinearLayout>